"SELECT *, ( SELECT MAX(peso_ruta) FROM tm_ruta WHERE idiomaId_ruta = tm_ruta.idiomaId_ruta AND tipoId_ruta = tm_ruta.tipoId_ruta AND est_ruta = 1 ) AS max_peso  FROM `cursos` left JOIN ruta_completo ON cursos.`idRuta_cursos`= ruta_completo.id_ruta LEFT JOIN tm_ruta ON cursos.idRuta_cursos = tm_ruta.id_ruta  WHERE `idAlumno_cursos` = 52 AND idLlegada_cursos = 50  ORDER BY cursos.est_cursos DESC;"